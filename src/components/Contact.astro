<section id="kontak" class="py-24 bg-surface-light relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-8 lg:gap-16">
            <!-- Contact Form -->
            <div
                class="bg-white p-8 lg:p-10 rounded-3xl shadow-soft border border-slate-100 reveal-up"
            >
                <h2 class="text-3xl font-bold text-primary-dark mb-2">
                    Hubungi Kami
                </h2>
                <p class="text-slate-500 mb-8">
                    Punya pertanyaan seputar Mocafie atau ingin menjadi mitra?
                    Kirimkan pesan Anda.
                </p>

                <form class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label
                                for="name"
                                class="text-sm font-semibold text-slate-700"
                                >Nama Lengkap</label
                            >
                            <input
                                type="text"
                                id="name"
                                placeholder="John Doe"
                                class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all bg-slate-50 focus:bg-white"
                            />
                        </div>
                        <div class="space-y-2">
                            <label
                                for="email"
                                class="text-sm font-semibold text-slate-700"
                                >Email</label
                            >
                            <input
                                type="email"
                                id="email"
                                placeholder="john@example.com"
                                class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all bg-slate-50 focus:bg-white"
                            />
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label
                            for="subject"
                            class="text-sm font-semibold text-slate-700"
                            >Subjek</label
                        >
                        <select
                            id="subject"
                            class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all bg-slate-50 focus:bg-white text-slate-600"
                        >
                            <option>Pertanyaan Produk</option>
                            <option>Kemitraan / Reseller</option>
                            <option>Lainnya</option>
                        </select>
                    </div>

                    <div class="space-y-2">
                        <label
                            for="message"
                            class="text-sm font-semibold text-slate-700"
                            >Pesan</label
                        >
                        <textarea
                            id="message"
                            rows="4"
                            placeholder="Tulis pesan Anda di sini..."
                            class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all bg-slate-50 focus:bg-white"
                        ></textarea>
                    </div>

                    <button
                        type="button"
                        class="w-full bg-primary hover:bg-primary-dark active:bg-primary-dark/90 text-white font-bold py-4 rounded-xl shadow-lg shadow-primary/20 transition-all transform hover:-translate-y-1 active:translate-y-0 hover:shadow-xl cursor-pointer"
                    >
                        Kirim Pesan
                    </button>
                </form>
            </div>

            <!-- Contact Info & Map -->
            <div class="flex flex-col gap-8 reveal-up delay-100">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <a
                        href="mailto:marketing.mocafie@gmail.com"
                        class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 flex items-start gap-4 hover:border-primary/30 hover:shadow-soft transition-all cursor-pointer group"
                    >
                        <div
                            class="bg-primary/10 p-3 rounded-xl text-primary group-hover:bg-primary group-hover:text-white transition-colors"
                        >
                            <span class="material-icons-round">email</span>
                        </div>
                        <div>
                            <h4 class="font-bold text-slate-500">Email</h4>
                            <p class="text-sm text-slate-500 break-all">
                                marketing.mocafie@gmail.com
                            </p>
                        </div>
                    </a>

                    <a
                        href="https://wa.me/6281234567890"
                        target="_blank"
                        class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 flex items-start gap-4 hover:border-primary/30 hover:shadow-soft transition-all cursor-pointer group"
                    >
                        <div
                            class="bg-primary/10 p-3 rounded-xl text-primary group-hover:bg-primary group-hover:text-white transition-colors"
                        >
                            <span class="material-icons-round">phone</span>
                        </div>
                        <div>
                            <h4 class="font-bold text-slate-800">WhatsApp</h4>
                            <p class="text-sm text-slate-500">
                                +62 812 3456 7890
                            </p>
                        </div>
                    </a>
                </div>

                <div
                    class="bg-white p-2 rounded-3xl shadow-soft border border-slate-100 flex-grow h-full min-h-[300px] relative overflow-hidden group"
                >
                    <iframe
                        title="Lokasi Mocafie di Bogor Botanical Gardens"
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3963.388880625626!2d106.79727457585507!3d-6.59849506440263!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e69c5b6b1029521%3A0x1d200e60803c7344!2sBogor%20Botanical%20Gardens!5e0!3m2!1sen!2sid!4v1709400000000!5m2!1sen!2sid"
                        width="100%"
                        height="100%"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"
                        class="grayscale group-hover:grayscale-0 transition-all duration-500 rounded-2xl"
                    ></iframe>
                </div>
            </div>
        </div>
    </div>
</section>
