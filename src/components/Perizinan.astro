---
import { Image } from "astro:assets";
import bpomLogo from "../assets/bpom-logo.png";
import haccpLogo from "../assets/haccp-logo.png";
import halalLogo from "../assets/halal-logo.jpg";
import isoLogo from "../assets/iso-logo.png";
---

<section class="py-20 bg-white" id="certifications">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2
            class="text-3xl lg:text-4xl font-bold font-serif text-primary text-center mb-16 reveal-up"
        >
            Perizinan
        </h2>

        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12 reveal-up delay-100"
        >
            <div class="flex flex-col items-center lg:items-start">
                <div
                    class="flex items-center gap-3 mb-4 w-full justify-center lg:justify-start"
                >
                    <div
                        class="w-8 h-8 rounded-full bg-green-50 flex items-center justify-center shrink-0"
                    >
                        <span
                            class="material-icons-round text-primary text-sm font-bold"
                            >check</span
                        >
                    </div>
                    <h3 class="text-xl font-bold text-slate-800">BPOM</h3>
                </div>
                <div
                    class="w-full flex flex-col items-center lg:items-start mb-6 h-32 justify-center"
                >
                    <Image
                        alt="Logo Badan POM"
                        class="h-20 w-auto object-contain"
                        src={bpomLogo}
                    />
                </div>
                <div class="text-center lg:text-left space-y-1">
                    <p class="text-sm font-medium text-slate-700">
                        Sertifikat Ijin Edar BPOM
                    </p>
                    <p class="text-sm text-slate-500">MD No. 229111001366</p>
                </div>
            </div>

            <div class="flex flex-col items-center lg:items-start">
                <div
                    class="flex items-center gap-3 mb-4 w-full justify-center lg:justify-start"
                >
                    <div
                        class="w-8 h-8 rounded-full bg-green-50 flex items-center justify-center shrink-0"
                    >
                        <span
                            class="material-icons-round text-primary text-sm font-bold"
                            >check</span
                        >
                    </div>
                    <h3 class="text-xl font-bold text-slate-800">HACCP</h3>
                </div>
                <div
                    class="w-full flex flex-col items-center lg:items-start mb-6 h-32 justify-center"
                >
                    <Image
                        alt="Logo HACCP Certified"
                        class="h-20 w-auto object-contain"
                        src={haccpLogo}
                    />
                </div>
                <div class="text-center lg:text-left space-y-1">
                    <p class="text-sm font-medium text-slate-700">
                        Sertifikat HACCP No:
                    </p>
                    <p class="text-sm text-slate-500">000000 Tepung Sehat</p>
                    <p class="text-xs text-slate-400 mt-2 leading-relaxed">
                        Free Gluten, Non GMO, Kualitas Premium
                    </p>
                </div>
            </div>

            <div class="flex flex-col items-center lg:items-start">
                <div
                    class="flex items-center gap-3 mb-4 w-full justify-center lg:justify-start"
                >
                    <div
                        class="w-8 h-8 rounded-full bg-green-50 flex items-center justify-center shrink-0"
                    >
                        <span
                            class="material-icons-round text-primary text-sm font-bold"
                            >check</span
                        >
                    </div>
                    <h3 class="text-xl font-bold text-slate-800">Halal</h3>
                </div>
                <div
                    class="w-full flex flex-col items-center lg:items-start mb-6 h-32 justify-center"
                >
                    <Image
                        alt="Logo Halal Indonesia"
                        class="h-24 w-auto object-contain"
                        src={halalLogo}
                    />
                </div>
                <div class="text-center lg:text-left space-y-1">
                    <p class="text-sm font-medium text-slate-700">
                        Sertifikat Halal Produk
                    </p>
                    <p class="text-sm text-slate-500">ID 3331000007830420</p>
                </div>
            </div>

            <div class="flex flex-col items-center lg:items-start">
                <div
                    class="flex items-center gap-3 mb-4 w-full justify-center lg:justify-start"
                >
                    <div
                        class="w-8 h-8 rounded-full bg-green-50 flex items-center justify-center shrink-0"
                    >
                        <span
                            class="material-icons-round text-primary text-sm font-bold"
                            >check</span
                        >
                    </div>
                    <h3 class="text-xl font-bold text-slate-800">ISO</h3>
                </div>
                <div
                    class="w-full flex flex-col items-center lg:items-start mb-6 h-32 justify-center"
                >
                    <Image
                        alt="Logo ISO 22000"
                        class="h-20 w-auto object-contain"
                        src={isoLogo}
                    />
                </div>
                <div class="text-center lg:text-left space-y-1">
                    <p class="text-sm font-medium text-slate-700">
                        Sertifikat ISO 22000:2018
                    </p>
                    <p class="text-sm text-slate-500">No. :- 0729F156521</p>
                </div>
            </div>
        </div>
    </div>
</section>
