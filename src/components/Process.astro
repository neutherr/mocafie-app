---

<section id="process" class="py-24 bg-white relative overflow-hidden">
    <div
        class="absolute top-0 left-0 w-full h-20 bg-gradient-to-b from-surface-light to-white"
    >
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
        <div
            class="flex flex-col md:flex-row justify-between items-end mb-16 reveal-up"
        >
            <div class="max-w-xl">
                <span
                    class="text-primary font-bold uppercase tracking-wider text-sm"
                    >Proses Kami</span
                >
                <h2
                    class="text-3xl lg:text-4xl font-bold text-primary-dark mt-2"
                >
                    Perjalanan Dari Kebun ke Dapur
                </h2>
            </div>
            <div class="hidden md:block">
                <button
                    class="text-primary hover:text-primary-dark font-semibold flex items-center gap-2 transition-all hover:translate-x-1 group cursor-pointer"
                >
                    Pelajari Lebih Detail
                    <span
                        class="material-icons-round group-hover:translate-x-1 transition-transform"
                        >arrow_forward</span
                    >
                </button>
            </div>
        </div>

        <div class="relative reveal-up delay-200">
            <div
                class="hidden md:block absolute top-12 left-0 w-full h-1 bg-gradient-to-r from-primary/10 via-primary/30 to-primary/10 rounded-full z-0"
            >
            </div>

            <div class="grid grid-cols-1 md:grid-cols-4 gap-8 relative z-10">
                {
                    steps.map((step, index) => (
                        <div class="text-center group cursor-default">
                            <div class="w-24 h-24 mx-auto bg-white border-4 border-surface-light rounded-full flex items-center justify-center shadow-lg mb-6 group-hover:border-primary group-hover:shadow-primary/20 group-hover:scale-110 transition-all duration-300 relative">
                                {step.isImage ? (
                                    <img
                                        src={step.image}
                                        alt={step.title}
                                        class="w-full h-full object-cover rounded-full opacity-90"
                                    />
                                ) : (
                                    <div class="bg-primary/10 w-full h-full rounded-full flex items-center justify-center">
                                        <span class="material-icons-round text-primary text-4xl">
                                            {step.icon}
                                        </span>
                                    </div>
                                )}

                                <div class="absolute -top-2 -right-2 w-8 h-8 bg-primary text-white rounded-full flex items-center justify-center font-bold text-sm shadow">
                                    {index + 1}
                                </div>
                            </div>

                            <h4 class="text-lg font-bold text-slate-800 mb-2">
                                {step.title}
                            </h4>
                            <p class="text-sm text-slate-500 px-4">
                                {step.description}
                            </p>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
